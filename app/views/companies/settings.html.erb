<%- model_class = Category -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= t '.code', :default => t("helpers.labels.code") %></th>
    <th><%= t '.description', :default => t("helpers.labels.description") %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% current_user.company.categories.each do |category| %>
    <tr>
      <td><%= link_to category.code, category_path(category) %></td>
      <td><%= category.description %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_category_path(category), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    category_path(category),
                    :method => :delete,
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_category_path,
            :class => 'btn btn-primary' %>


