<%- model_class = DocumentType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t '.description', :default =>  t("helpers.labels.description") %></th>
      <th><%=t '.account_type', :default =>  t("helpers.labels.account_type") %></th>
      <th><%=t '.stock_type', :default =>  t("helpers.labels.stock_type") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @document_types.each do |document_type| %>
      <tr>
        <td><%= link_to document_type.description, document_type_path(document_type) %></td>
        <td><%= document_type.account_type %></td>
        <td><%= document_type.stock_type %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_document_type_path(document_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      document_type_path(document_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_document_type_path,
            :class => 'btn btn-primary' %>
